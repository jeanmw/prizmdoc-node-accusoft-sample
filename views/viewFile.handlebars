<!DOCTYPE html>
<html>
<head>
  <title>Accusoft PrizmDoc Viewer Node Example</title>

  <script src="/public/bundle.js"></script>

  <link rel="stylesheet" href="/public/viewer-assets/css/normalize.min.css">
  <link rel="stylesheet" href="/public/viewer-assets/css/viewercontrol.css">
  <link rel="stylesheet" href="/public/viewer-assets/css/viewer.css">

  <script src="//pcc-assets.accusoft.com/v10.5/js/viewercontrol.js"></script>
  <script src="//pcc-assets.accusoft.com/v10.5/js/viewer.js"></script>

  <script src="/public/viewer-assets/js/underscore.min.js"></script>
  <script src="/public/viewer-assets/js/jquery.hotkeys.min.js"></script>

  <script type="text/javascript">
    var viewingSessionId = '{{ viewingSessionId }}';
    var pluginOptions = {
      documentID: viewingSessionId, // from controller
      language: languageItems, // from bundle.js
      template: htmlTemplates, // from bundle.js
      imageHandlerUrl: '/pcc',
      uiElements: {
        fullScreenOnInit: true
      }
    };

    $(document).ready(function () {
      $("#viewer1").pccViewer(pluginOptions).viewerControl;
    });
  </script>
</head>
<body>
  <div id="viewer1"></div>
</body>
</html>
